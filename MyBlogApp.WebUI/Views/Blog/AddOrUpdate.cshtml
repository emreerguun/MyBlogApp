@model Blog
@{
    ViewData["Title"] = "AddOrUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <h2>Edit Blog</h2>
    <br />
    <form asp-controller="Blog" asp-action="AddOrUpdate" method="post">
        <input type="hidden" asp-for="BlogId" />
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Body">Body</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input asp-for="Image" class="form-control">
        </div>

        <div class="form-check">
            <input asp-for="isApproved" class="form-check-input">
            <label class="form-check-label">Is Approved?</label>
        </div>

        <div class="form-check">
            <input asp-for="isHome" class="form-check-input">
            <label class="form-check-label">Is Home?</label>
        </div>
        <div class="form-check">
            <input asp-for="isSlider" class="form-check-input">
            <label class="form-check-label">Is Slider?</label>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" multiple class="form-control" asp-items="ViewBag.Categories">
                <option disabled selected value="">Select Category</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


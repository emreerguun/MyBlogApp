@model Blog
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section scripts{ 
<script src="/modules/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Body")
    </script>
}

<div class="container mt-3">
    <h2>Edit Blog</h2>
    <br />
    <form asp-controller="Blog" asp-action="Edit" method="post" enctype="multipart/form-data"> @*upload yaptığımız için enctype kullandık*@
        <input type="hidden" asp-for="BlogId" />
    <input type="hidden" asp-for="Image" />
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Body">Body</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>
        <div class="form-group">
            @if (Model.Image != null)
            {
                <img src="~/img/@Model.Image" alt="Lütfen resim ekleyin" width="120">
            }
            else
            {
                <label>Image</label>    
            }
            <input type="file" name="file" id="file" class="form-control">
        </div>

        <div class="form-check">
            <input asp-for="isApproved" class="form-check-input">
            <label class="form-check-label">Is Approved?</label>
        </div>

        <div class="form-check">
            <input asp-for="isHome" class="form-check-input">
            <label class="form-check-label">Is Home?</label>
        </div>
        <div class="form-check">
            <input asp-for="isSlider" class="form-check-input">
            <label class="form-check-label">Is Slider?</label>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" multiple class="form-control" asp-items="ViewBag.Categories">
                <option disabled selected value="">Select Category</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Edit Blog</button>
    </form>
</div>



